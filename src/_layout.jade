- var site_url      = 'http://example.com';
- var page_url      = site_url;
- var ogimage       = site_url + 'assets/img/site-image.jpg';
- var site_name     = 'site name';
- var title         = 'page title';
- var description   = 'description';
- var keywords      = 'keyword, keyword, keyword';
block params
include _mixins
doctype html
html(lang='ja', prefix='og: http://ogp.me/ns#')
  head
    meta(charset='UTF-8')
    title= title + ' | ' + site_name
    meta(name='description', content=description)
    meta(name='keywords', content=keywords)
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(http-equiv='x-ua-compatible', content='ie=edge')
    meta(name='mobile-web-app-capable', content='yes')
    meta(name='og:title', content=title)
    meta(name='og:type', content='website')
    meta(name='og:description', content=description)
    meta(name='og:url', content=page_url)
    meta(name='og:image', content=ogimage)
    meta(name='og:site_name', content=site_name)
    meta(name='canonical', href=page_url)
    meta(name='robots', content="index, follow")
    link(rel='shortcut icon' href='./assets/img/favicon.ico')
    link(rel='apple-touch-icon-precomposed', href='./assets/img/favicon57x57.png', sizes='57x57')
    link(rel='apple-touch-icon-precomposed', href='./assets/img/favicon72x72.png', sizes='72x72')
    link(rel='apple-touch-icon-precomposed', href='./assets/img/favicon114x114.png', sizes='114x114')
    link(rel='apple-touch-icon-precomposed', href='./assets/img/favicon144x144.png', sizes='144x144')
    link(rel='stylesheet', href='./assets/css/style.css')
  body.loading
    include _header
    block content
    include _footer
    script(src='./assets/js/script.js')
    script.
